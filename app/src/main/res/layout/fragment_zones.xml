<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZonesFragment">

    <fragment
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="true" />

    <Switch
            android:text="Permission larm preset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/switch_larmPreset"
            android:layout_marginBottom="136dp"/>

    <Switch
            android:text="Setting alarm notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="48dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/switch_settingNotice"
            android:layout_marginBottom="171dp"/>

    <Switch
            android:text="Setting override sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="48dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/switch_settingOverrideSound"
            android:layout_marginBottom="204dp"/>

    <Switch
            android:text="Permission larm sound recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="49dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/switch_larmSoundRecording"
            android:layout_marginBottom="98dp"/>

    <Switch
            android:text="Permission larm video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="52dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/switch_larmVideo"
            android:layout_marginBottom="64dp"/>

    <TextView
            android:text="Placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/txt_clickedZone"
            android:layout_alignStart="@+id/switch_larmPreset"
            android:layout_marginBottom="235dp"/>

    <Button
            android:text="Update settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switch_larmVideo"
            android:layout_alignEnd="@+id/switch_settingNotice"
            android:id="@+id/btn_updateSettings"
            android:layout_marginTop="-169dp"
            android:layout_marginEnd="205dp"/>
</RelativeLayout>