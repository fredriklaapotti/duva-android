<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_alignParentTop="true"
            android:id="@+id/txt_desc_username"
            android:layout_marginTop="120dp"
            android:text="@string/txt_desc_username"/>

    <TextView
            android:text="@string/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/txt_desc_username"
            android:layout_alignTop="@+id/txt_desc_username"
            android:id="@+id/txt_username"
            android:layout_marginTop="0dp"
            android:layout_marginStart="25dp"/>

    <TextView
            android:text="@string/txt_desc_currentZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_desc_currentZone"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@+id/txt_desc_username"
            android:layout_below="@+id/txt_desc_username"/>

    <TextView
            android:text="@string/txt_currentZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_currentZone"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_username"
            android:layout_toEndOf="@+id/txt_desc_currentZone"
            android:layout_marginStart="25dp"/>

    <ImageButton
            android:src="@drawable/btn_record"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/btn_larmRecord"
            android:background="@android:color/transparent"
            android:layout_marginBottom="145dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/btn_desc_larmRecord"/>

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/bar_progress"
            android:scaleY="5"
            android:layout_marginBottom="280dp"/>

</RelativeLayout>